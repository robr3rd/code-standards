---
env:
  es6: true
  jquery: true
  browser: true
  jasmine: true
  phantomjs: true
  prototypejs: true

extends: "eslint:recommended"

globals:
  $: true
  jQuery: true

rules:
  # Possible Errors
  valid-jsdoc:
    - 2
    -
      prefer:
        defaultvalue: "default"
        func: "function"
        arg: "param"
        argument: "param"
        prop: "property"
        returns: "return"
        exception: "throws"
        member: "var"
      requireReturnDescription: false

  # Best practices
  curly: [2, "multi-line"]
  dot-notation: 2
  eqeqeq: [2, "allow-null"]
  no-alert: 1
  no-case-declarations: 2
  no-eval: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-multi-spaces: 2
  no-return-assign: 2
  no-self-compare: 2
  no-trailing-spaces: 2
  no-unused-expressions: 1
  yoda: 2

  # Stylistic Issues
  array-bracket-spacing: 2
  brace-style: 2
  camelcase: 2
  comma-spacing: 2
  comma-style: 2
  computed-property-spacing: 2
  consistent-this: [1, "self"]
  eol-last: [2, "unix"]
  indent:
    - 2
    - "tab"
    - {SwitchCase: 1, VariableDeclarator: 1}
  key-spacing:
    - 2
    - {afterColon: true, align: value, beforeColon: false, mode: minimum}
  linebreak-style: [2, "unix"]
  new-cap: 2
  no-lonely-if: 2
  no-multiple-empty-lines: [2, {max: 3, maxEOF: 1}]
  no-spaced-func: 2
  object-curly-spacing: [2, "never"]
  operator-linebreak: 2
  padded-blocks: [2, "never"]
  quotes: [2, "single", "always-escape"]
  quote-props: 2
  require-jsdoc: 1
  semi: [2, "always"]
  space-after-keywords: [2, "always"]
  space-before-blocks: 2
  space-before-function-paren: [2, "never"]
  space-before-keywords: [2, "always"]
  space-unary-ops: 2
  space-in-parens: 2
  space-infix-ops: 2
  space-return-throw-case: 2
  spaced-comment:
    - 2
    - "always"
    - exceptions: ['-', '=', '*']
  wrap-regex: 2

  # ECMAScript 6
  generator-star-spacing: 2
